mixin menu (items, myclass)
    for item in items 
        a.nav-link.link.p-3(href=item.url) #{item.name}

mixin travelPlan (item)
    figure.travel-plan
        figcaption
            a.mx-auto.flex(href=item.href)
                picture.mx-auto
                    source(srcset=item.src + ".webp", tipe="image/webp")
                    img.mx-auto(src=item.src + ".png", alt=item.alt)
                p.title-card #{item.titleCard}
                p.price #{item.price}
                p.card-descr #{item.description}

mixin specialProposals (item)
    figure
        figcaption
            picture 
                source(srcset=item.src + ".webp", tipe="image/webp")
                img(src=item.src + ".png", alt=item.alt)
            p.title-card #{item.titleCard}
            p.card-descr #{item.description}
            p.price #{item.price}
            .button
                a.orange(href=item.href) замовити

mixin additionalInformation (item)
    figure
        figcaption
            p.title-card #{item.titleCard}
            p.sizeFile #{item.sizeFile}
            p.card-descr #{item.description}
            .button 
                a.orange(href=item.href) скачати
